<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/btnCompare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="248dp"
        android:layout_marginEnd="8dp"
        android:onClick="CompareNumbers"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/txtCompare2"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/txtCompare1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCompare1"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="388dp"
        android:layout_marginTop="144dp"
        android:ems="10"
        android:hint="Enter a number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtCompare2"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Enter a number"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/txtCompare1"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>